{
  "version": 2,
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "../public" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/index.js" },
    { "src": "/(.*)\\.(js|css|png|jpg|svg|ico|json)", "dest": "/$1.$2" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
